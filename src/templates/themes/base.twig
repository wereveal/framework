{% extends '@' ~ lib_prefix ~ 'themes/base.twig' %}
{% block stylesheets %}
    {% if css_dir ~ '/min/styles.css' is ondisk %}
        <link rel="stylesheet" href="{{ css_dir }}/min/styles.css" media="screen">
    {% else %}
        <link rel="stylesheet" href="{{ css_dir }}/styles.css" media="screen">
    {% endif %}
{% endblock %}
{% block debug %}
    {% if debug_text %}
            <div class="container">
                    <code class="pre">
                        {{ debug_text }}
                    </code>
            </div>
    {% endif %}
        <p class="font-tiny">Site Base Tpl</p>
{% endblock %}
